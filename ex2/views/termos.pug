extends layout

block content
  #display.w3-card-4.modal.w3-animate-top(style=" width:100%; height=100%; overflow: auto; ")
      .w3-container.w3-blue
          h2.w3-center Desenvovimento de Aplicações Web 2020
  h4.w3-center Esta página apresenta os termos dos nossos dados

    h2.w3-center Lista de termos
    table#tabela_pedidos.w3-table.w3-bordered
      tr
          th Termo
          th ID da Classe
          th Título da Classe
      each t in termos
          tr
            td #{t.termo}     
            td 
              a(href='/classes/'+t.idClasse)= t.idClasse
            td 
              a(href='/classes/'+t.idClasse)= t.tituloClasse
          </tr>
    br
    br
    br
    
    a(href='/') Página principal