extends layout

block content
  #display.w3-card-4.modal.w3-animate-top(style=" width:100%; height=100%; overflow: auto; ")
      .w3-container.w3-blue
          h2.w3-center Desenvovimento de Aplicações Web 2020
  h4.w3-center Esta página apresenta os dados de uma classe

    br
    br
    br
    w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b Codigo
                    .w3-col.s9.w3-border
                        p=classe.codigo 
                    .w3-col.s3
                        label.w3-text-blue
                            b Titulo
                    .w3-col.s9.w3-border
                        p=classe.titulo
                    .w3-col.s3
                        label.w3-text-blue
                            b Descrição
                    .w3-col.s9.w3-border
                        p=classe.descricao     
                    .w3-col.s3

    br
    br
    br
    br
    br
    if descendentes.length>0
        <br>
        <br>
        h2.w3-center Lista de descendentes
        
        table#tabela_pedidos.w3-table.w3-bordered.w3-center
            tr
                th Codigo
                th Titulo
            each e in descendentes
                tr
                    td #{e.codigo}
                    td #{e.titulo}
                </tr>
    br
    br
    br
    br
    br
    a(href='/classes') Anterior
    br
    a(href='/') Pagina principal